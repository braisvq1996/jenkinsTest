
pipeline {
    agent any
    options {
        skipStagesAfterUnstable()
    }
    stages {
        stage('Build') {
            steps {
                echo 'Building'
                'pwd'
                sh 'wget 'https://github.com/braisvq1996/jenkinsTest/JenkinsFile.git''
                sh 'ls -al'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing'
                chmod 777 JenkinsFile
            }
        }
        stage('Sanity check') {
            steps {
                input "Does the environment look ok?"
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying'
                exit
            }
        }
    }
}
